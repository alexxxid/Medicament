<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!{% endblock %}
        </title>
        {% block stylesheets %}
            <!-- CSS -->
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <link href="css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
            <link href="css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>
            <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <nav class="nav-extended blue darken-3 text-white">
            <div class="nav-wrapper">
                <a href="#" class="brand-logo text-lighten-2">Medicament</a>
                <div class="container">

                    <a href="#" data-target="mobile-demo" class="sidenav-trigger">
                        <i class="material-icons">menu</i>
                    </a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li>
                            <a href="#modal1" class="modal-trigger waves-effect">Login</a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>

        <!-- Modal Structure -->
        <div id="modal1" class="modal">
            <div class="modal-content container">
                <h4>Connexion</h4>
                <div class="row">
                    <form class="col s12 container">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">account_circle</i>
                                <input id="identifiant" type="text" class="validate">
                                <label for="identifiant">Identifiant</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock</i>
                                <input id="identifiant" type="text" class="validate">
                                <label for="identifiant">Mot de passe</label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect blue darken-3 btn">Valider</a>
            </div>
        </div>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <!-- Scripts-->
            <script src="js/jquery-3.3.1.js" type="text/javascript"></script>
            <script src="js/materialize.js"></script>
            <script src="js/init.js"></script>
        {% endblock %}
    </body>
</html>