<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!{% endblock %}
        </title>
        {% block stylesheets %}
            <!-- CSS -->
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <link href="css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
            <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
            <link href="css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>

        {% endblock %}
    </head>
    <body>
        <nav class="nav-extended blue darken-3 ">
            <div class="nav-wrapper ">
                <a href="{{path('acceuil')}}" class="brand-logo text-lighten-2 light">Medicament</a>
                <div class="container">
                    {# MENU POUR LES ORDINATEURS #}
                    <ul class="right hide-on-med-and-down">
                        {% if not app.user %}
                            <li>
                                <a href="#modal1" class="modal-trigger waves-effect">Login</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a href="{{ path('logout') }}">
                                    Logout
                                </a>

                            </li>
                        {% endif %}

                    </ul>
                </div>

                {# MENU POUR LES TELEPHONES PORTATIFS DE TYPE CELLULAIRE #}
                <ul id="nav-mobile" class="sidenav">
                    <li>
                        <a href="#modal1">Login</a>
                    </li>
                </ul>
                <a href="#" data-target="nav-mobile" class="sidenav-trigger">
                    <i class="material-icons">menu</i>
                </a>
                {#  #}

            </div>

        </nav>

        <!-- Modal Structure -->
        <div id="modal1" class="modal">
            <div class="modal-content container">
                <h4 class="center">Connexion</h4>
                <form action="{{path('login')}}" method="post" class="col s12 container">
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">account_circle</i>
                            <input id="identifiant" required="required" name="_username" type="text" class="validate">
                            <label for="identifiant">Identifiant</label>
                            <input type="hidden" nam="_target_path" value="{{path('acceuil')}}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">lock</i>
                            <label for="password">Mot de passe</label>
                            <input required="required" name="_password" type="password" id="password"/>
                            <span>
                                <i class="material-icons prefix" id="reveal">visibility</i>
                            </span>
                        </div>
                    </div>
                    <div class="row center">
                        <button type="submit" class="modal-close waves-effect blue darken-3 btn">Valider</button>
                    </div>
                </form>
            </div>

        </div>

        <!-- Modal Structure 2-->
        <div id="modal2" class="modal">
            <div class="modal-content container">

                <h4 class="center">Afficher</h4>
                <table class="highlight responsive-table">
                    <thead>
                        <tr>
                            <th>idMedicament</th>
                            <th>Nom Med</th>
                            <th>Prix</th>
                            <th>Contre Indication</th>
                            <th>Effet</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>

            </div>

        </div>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <!-- Scripts-->
            <script src="js/jquery-3.3.1.js" type="text/javascript"></script>
            <script src="js/materialize.js"></script>
            <script src="js/init.js"></script>
            <script>
                // Some vars
                var passwordInput = $("#password"),
                    revealBtn = $("#reveal");

                // show / hide eye button
                passwordInput.on("keyup", function () {
                    if (!$(this).val()) {
                        revealBtn.css("display", "none");
                    } else {
                        revealBtn.css("display", "initial");
                    }
                });

                // show / hide password
                revealBtn.on("mouseup", function () {
                    passwordInput.attr("type", "password");

                });

                // show / hide password
                revealBtn.on("mousedown", function () {
                    passwordInput.attr("type", "text");

                });
            </script>
        {% endblock %}
    </body>
</html>