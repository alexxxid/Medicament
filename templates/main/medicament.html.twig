{% extends 'base.html.twig' %}

{% block title %}Medicaments{% endblock %}

{% block body %}

    <table class="highlight responsive-table">
        <thead>
            <tr>
                <th>idMedicament</th>
                <th>Nom Med</th>
                <th>Nom famille</th>
                <th>Prix</th>
                <th>Contre Indication</th>
                <th>Effet</th>
                {% if app.user.getRoles() == ['ROLE_ADMIN'] %}
                    <th></th>
                {% endif %}
            </tr>
        </thead>

        <tbody>
            <section class="medicaments">
                {% for medicament in medicaments %}
                    <tr>
                        <td>{{ medicament.id }}</td>
                        <td>{{ medicament.NomCommercial }}</td>
                        <td>{{ medicament.famille.NomFamille }}</td>
                        <td>{{ medicament.PrixEchantillon }}</td>
                        <td>{{ medicament.ContreIndication }}</td>
                        <td>{{ medicament.Effet }}</td>
                        {% if app.user.getRoles() == ['ROLE_ADMIN'] %}
                            <td>
                                <a href="#modal2" class="modal-trigger btn waves-effect blue darken-3">
                                    <i class="material-icons">
                                        calendar_view_day
                                    </i>
                                </a>
                                <a href="" class="btn waves-effect blue darken-3">
                                    <i class="material-icons">create</i>
                                </a>
                                <a href="{{ path('supprimerMedicament', {'id': medicament.id }) }}" class="btn waves-effect blue darken-3">
                                    <i class="material-icons">clear</i>
                                </a>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </section>
        </tbody>
    </table>
    <!-- Modal Structure 2-->
    <div id="modal2" class="modal">
        <div class="modal-content container">

            <h4 class="center">Afficher</h4>
            <table class="highlight responsive-table">
                <thead>
                    <tr>
                        <th>idMedicament</th>
                        <th>Nom Med</th>
                        <th>Prix</th>
                        <th>Contre Indication</th>
                        <th>Effet</th>
                        <th></th>
                    </tr>
                </thead>
            </table>

        </div>

    </div>
{% endblock %}